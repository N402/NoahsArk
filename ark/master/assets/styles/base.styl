@import 'mixin'

.iconfont:before
  font-size 32px

.iconfont.icon-small:before
  font-size 16px

*
  font-family 'Helvetica Neue' Helvetica Arial 'Hiragino Sans GB' 'Microsoft YaHei' '微软雅黑' sans-serif

body
  background #eee

a
  color #fff
  text-decoration none

ul, li
  margin 0
  padding 0
  list-style none

input, textarea
  width 100%
  padding 10px
  font-size 16px
  border 1px solid #ddd
  box-sizing border-box
  border-radius 4px

.pull-left
  float left

.pull-right
  float right

.mask
  position fixed 
  width 100%
  height 100%
  background rgba(0,0,0,0.6)
  z-index 2

.display-hide
  display none

#msgContainer
  transition-duration 0.25s
  position absolute
  font-size 14px
  color #333
  background #fff
  top 45px
  right 60px
  line-height 20px
  padding 10px 18px
  box-shadow 2px 2px 6px #999
  z-index 100
  a
    color #333
  a.closeBtn
    padding-left 20px;
  &:hover
    opacity 1!important

#profile-setting
  position fixed
  background #fff
  overflow hidden
  width 350px
  max-height 600px
  height auto
  top 50%
  left 50%
  margin-left -175px
  margin-top -300px
  z-index 5
  border-radius 4px

  .title
    background #15ABB6
    color #fff
    padding 16px 16px 20px
    .avatar
      text-align center
      position relative
      width 120px
      margin 0 auto
      #avatarSaveTip
        position absolute
        line-height 100px
        top 3px
        left 10px
        width 100px
        height 100px
        border-radius 100px
        background rgba(0,0,0,0.7)
      img
        width 100px
        height 100px
        border-radius 100px
        border 3px solid #fff
      .edit
        right 10px
        bottom 10px
        position absolute
        padding 0
        margin 0
        height 28px
        width 28px
        border-radius 14px
        background #fff
        line-height 28px
        box-shadow 1px 1px 6px #999
        .icon-edit:before
          font-size 18px
          color #aaa
          padding 7px

  .tabs 
    a
      display inline-block
      font-size 14px
      color #333
      background #ccc
      width 49%
      line-height 40px
      text-align center
    a.selected
      background #fff
      color #15ABB6
  .tab-container
    padding 40px 20px 10px
    section
      margin 10px 0
    label
      display block
      color #666
      font-size 16px
      margin-bottom 10px
    input[disabled="disabled"]
      background #eee
    .btn-group
      .btn
        width 46%
      .cancelBtn
        float right
    .msg-tips
      color #15ABB6
      text-align center

#header
  width 100%
  height 50px
  white-space nowrap
  background-color #333538

  .container
    position relative


  #logo
    display block
    float left
    width 240px
    height 60px
    background #0dadb7 no-repeat
    background-image url(/static/images/logo.png)
    background-size 90% 75%
    background-position center center

  .nav
    margin-left 20px
    display inline-block
    vertical-align top
    li
      display inline-block
      a
        display block
        color #fff
        padding 0px 30px
        height 45px
        line-height 45px

      &:hover
        border-bottom #0dadb7 5px solid;

  .profile
    display inline-block
    position absolute
    color #fff
    line-height 40px
    top 0px
    right 100px
    &:not(#msgContainer):hover div#msgContainer
      opacity 0
    &:hover ul
      opacity 1
      display block
    ul
      opacity 0
      transition-duration 0.25s
      display none
      padding 10px 0
      position absolute
      background-color #333538
      z-index 9999
      margin-top 51px
      li a
        display block
        width 130px
        height 40px
        line-height 30px
        padding 0 20px
        background-color #333538
        transition-duration 0.25s
        &:hover
          cursor pointer
          background-color #686E76
    .avatar
      display inline-block
      float left
      line-height 46px
      img
        width 35px
        height 35px
        border-radius 35px
        vertical-align middle
    .info
      float left
      line-height 50px
      padding 0 10px

    .unread-tips
      font-size 14px
      background #f40
      padding 1px 5px 2px
      color #fff
      border-radius 4px
      margin-left 2em
   
#footer
  position fixed
  right 10px
  bottom 0px
  color #666
  margin 0 auto
  font-size 13px
  text-align right
  ul.nav
    overflow hidden
    margin 0 auto
    text-align center
    li
      display inline-block
      &:after
        margin-left 4px
        content: '|'
      &:last-child:after
        content: ''
      a
        color #666
  .copyright
    p
      margin 4px 0

.main
  overflow hidden
  padding-bottom 80px

.btn-group.center
  text-align center
  margin 0 auto

.btn
  color #fff
  border none
  font-size 14px
  padding 12px 30px
  border-radius 3px
  display inline-block
  background #ababab
  &[disabled]
    color #eee
.btn-success
  background #0dadb7
  &[disabled]
    color #999
    background #0d8d97
