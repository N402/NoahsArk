@import 'mixin'

.iconfont:before
  font-size 32px

.iconfont.icon-small:before
  font-size 16px

body
  background #eee

a
  color #fff
  text-decoration none

ul, li
  margin 0
  padding 0
  list-style none

#header
  width 100%
  height 50px
  background-color #333538

  #logo
    float left
    width 200px
    height 60px
    background #0dadb7

  .nav
    margin-left 60px
    display inline-block
    li
      transition-duration 0.25s
      min-width 100px
      color #fff
      padding 0px 10px
      display inline-block
      height 45px
      line-height 45px

      &:hover
        border-bottom #0dadb7 5px solid;

  .profile
    color #fff
    float right
    line-height 40px
    margin-right 100px
    &:hover ul
      display block
    ul
      display none
      padding 10px 0
      position absolute
      background-color #333538
      li
        width 130px
        height 40px
        line-height 30px
        padding 0 20px
        background-color #333538
        transition-duration 0.25s
        &:hover
          cursor pointer
          background-color #686E76
    .avatar
      display inline-block
      float left
      line-height 46px
      img
        width 35px
        height 35px
        border-radius 35px
        vertical-align middle
    .info
      float left
      line-height 50px
      padding 0 10px

#footer
  position fixed
  right 10px
  bottom 0px
  color #666
  margin 0 auto
  font-size 13px
  text-align right
  ul.nav
    overflow hidden
    margin 0 auto
    text-align center
    li
      display inline-block
      &:after
        content: '|'
      &:last-child:after
        content: ''
      a
        color #666

.btn-group.center
  text-align center
  margin 0 auto

.btn-group
  .btn
    font-size 14px
    padding 12px 30px
    margin 0 10px
    border-radius 3px
    display inline-block
    background #ababab
  .btn-success
    background #0dadb7
