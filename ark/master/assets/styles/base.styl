@import 'mixin'

.iconfont:before
  font-size 32px

.iconfont.icon-small:before
  font-size 16px

body
  background #eee

a
  color #fff
  text-decoration none

ul, li
  margin 0
  padding 0
  list-style none

#header
  width 100%
  height 50px
  background-color #333538

  #logo
    float left
    width 200px
    height 60px
    background #0dadb7

  .nav
    margin-left 60px
    display inline-block
    li
      transition-duration 0.25s
      min-width 100px
      color #fff
      text-align center
      padding 0px 20px
      display inline-block
      height 45px
      line-height 45px

      &:hover
        border-bottom #0dadb7 5px solid;

  .profile
    color #fff
    float right
    line-height 40px
    margin-right 100px
    &:hover ul
      display block
    ul
      display none
      padding 10px 0
      position absolute
      background-color #333538
      li
        width 130px
        height 40px
        line-height 30px
        padding 0 20px
        background-color #333538
        transition-duration 0.25s
        &:hover
          cursor pointer
          background-color #686E76
    .avatar
      display inline-block
      float left
      line-height 46px
      img
        width 35px
        height 35px
        border-radius 35px
        vertical-align middle
    .info
      float left
      line-height 50px
      padding 0 10px


.main
  width 80%
  margin 0 auto
  margin-top 20px

  .wrapper
    clear both
    display block
    overflow hidden

  .title
    height 18px
    font-size 36px
    border-bottom 1px solid #aaa
    margin-top 40px
    margin-bottom 40px
    span
      background #eee
      padding-right 30px

  .cards-container.normal-card
    overflow hidden
    background-size 100% 100%
    transition-duration 0.25s
    width 246px
    height 146px
    &:hover
      transform translate3d(0,-4px,0px)
      box-shadow 3px 3px 10px #aaa

  .cards-container
    float left
    margin 20px
    border-radius 8px
    img
      width 250px
      height 150px
      border-radius 8px

  .cards-container.create-card
    width 246px
    height 146px
    border-radius 8px
    border 2px dashed #aaa;

    &:hover .card
      color #aaa

    .card
      display block
      cursor pointer
      color #ccc
      font-size 100px
      line-height 150px
      text-align center
