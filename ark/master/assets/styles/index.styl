@import 'mixin'

body
  background-image url('/static/images/bg.jpg')
  background-size 100%

.mask
  position fixed
  width 100%
  height 100vh
  background #000
  opacity: 0.6
  z-index -1

.wrapper
  position fixed
  top 48%
  left 50%
  min-width 500px
  margin-top -200px
  margin-left -250px
  text-align center
  .logo
    color #fff
    font-weight bold
    font-size 90px
    line-height 100px
  .ask
    height 30px
    line-height 30px
    color #eee
    font-size 13px

.chasers
  .chaser
    &:hover
      background rgba(255,255,255,0.4)
      -webkit-animation-name pulse
      -webkit-animation-duration 0.25s
    display inline-block
    position fixed
    background rgba(255,255,255,0.3)
    padding 10px
    border 1px solid #fff;
    border-radius 5px
    .avatar
      text-align center
      position absolute
      top -20px
      left -20px
      img
        width 30px
        height 30px
        border-radius 30px
        border solid 2px rgba(255,255,255,0.75)
    .board
      font-size 14px
      color #fff

.sign-container
  position fixed
  left 50%
  width 600px
  margin-top 10px
  margin-left -300px

  input, button
    padding 10px
    width 250px
    color #fff
    margin 10px
    background none transparent
    border 2px solid rgba(255,255,255,0.6)
    border-radius 5px

  button
    &:hover
      background rgba(255,255,255,0.3)
    width 150px

  a
    color #ccc
    font-size 13px
    text-decoration none

.signup-container
  display none

.pic-copyright,
.pic-copyright a
  color #aaa
  font-size 12px;
  text-decoration none
  text-align center
  position fixed
  bottom 20px
  right 20px

.bounceIn
  -webkit-animation-name bounceIn
  -webkit-animation-duration 0.5s

@keyframes pulse
  0%
    transform scale(1)
  30%
    transform scale(1.15)
  80%
    transform scale(0.85)
  100%
    transform scale(1)

@keyframes bounceIn
  0%
    opacity 0
    transform scale(.3)
  50%
    opacity 1
    transform scale(1.05)
  70%
    transform scale(.9)
  100%
    opacity 1
    transform scale(1)
