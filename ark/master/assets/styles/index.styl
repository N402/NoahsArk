@import 'mixin'

body
  background-image url('/static/images/bg.jpg')
  background-size 100%

.mask
  position fixed
  width 100%
  height 100vh
  background #000
  opacity: 0.6
  z-index -1

.wrapper
    position fixed
    top 35%
    left 50%
    width 500px
    height 100px
    margin-top -50px
    margin-left -250px
    text-align center
    line-height 100px
  .logo
    color #fff
    font-weight bold
    font-size 90px
  .ask
    height 30px
    line-height 30px
    color #eee
    font-size 13px

.chasers
  .chaser
    display inline-block
    position fixed
    top 50%
    left 50%
    background rgba(255,255,255,0.3)
    padding 10px
    border 1px solid #fff;
    .avatar
      text-align center
      position absolute
      top -20px
      left -20px
      img
        width 30px
        height 30px
        border-radius 30px
        border solid 2px rgba(255,255,255,0.75)
    .board
      font-size 14px
      color #fff


.popOut
  -webkit-animation-name popOut
  -webkit-animation-duration 0.5s

@keyframes popOut
  0%
    opacity 0
    transform scale(.3)
  50%
    opacity 1
    transform scale(1.05)
  70%
    transform scale(.9)
  100%
    opacity 1
    transform scale(1)
