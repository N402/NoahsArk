.container
  width 500px
  margin 0 auto
  border-radius 10px
  background #fff
  margin-top 10%
  overflow hidden
  padding-bottom 30px

.logo
  padding 10px 0
  background-color #0dadb7
  text-align center

.logo a
  display inline-block
  background url('/static/images/logo.png')
  background-size 100% 100%
  height 78px
  width 439px

.body
  text-align center

.body p.tips
  color #f03
  font-size 15px
  padding 10px 0 0 0

.body form input
  width 300px
  border 1px solid #ddd
  line-height 16px
  font-size 16px
  padding 10px

.body form button
  width 300px
  height 40px
  background #0dadb7
  border-radius 5px
  color #fff
  font-size 16px
  border none
  margin-top 10px
