*
  margin 0
  padding 0

ul
  padding 0
  margin 0
  list-style none

body
  color #7e7e7e
  background #f7f7f7
  font-size 14px

a
  color #333
  text-decoration none

.hide
  display none

.pull-left
  float left

.pull-right
  float right

.center
  margin 0 auto
  text-align center

.container
  margin 0 auto
  width 1280px

.header
  width 100%
  height 80px
  background #424242

.header
  h1
    color #fff
    font-weight normal
    line-height 80px
    text-indent 3em
    float left
    margin 0

  .nav
    .current-user
      color #aaa

  .nav,
  .nav a
    color #fff
    line-height 80px
    padding 0 20px

.footer
  width 100%
  height 30px
  line-height 30px
  text-indent 1em

.main
  overflow hidden
  background #fff
  .menu
    width 150px
    min-height 80vh
    background #38c2a8

    ul.nav li
      a
        transition-duration 0.25s
        color #fff
        text-decoration none
        display block
        width 150px
        height 40px
        line-height 40px
        text-align center

      &:hover
        transition-duration 0.25s
        background #31a592

      &.current
        background #31a592

  .content
    margin-left 150px
    padding 30px

    .title
      font-size 28px
      margin-bottom 20px
      border-bottom 1px solid #ddd
      padding-bottom 20px

.btn-group
  padding-left 60px
  padding-top 20px

  .btn
    font-size 16px
    display inline-block
    width 160px
    height 40px
    text-align center
    color #fff
    line-height 40px
    border none
    background #999
    border-radius 4px
    box-shadow  0 3px 0 #777

  .btn-success
    background #38c2a8
    box-shadow  0 3px 0 #31a592

.table-container
  width 100%

  table
    width 100%

    thead
      background #e5e5e5
      th
        height 30px
        line-height 30px

    tbody
      tr
        border-bottom 1px solid #ddd
      td
        text-align center
        height 30px
        line-height 30px

.form-container
  width 500px

  section
    margin 20px
    label
      width 100px
      display inline-block
      text-align right
      padding-right 20px
    input
      border 0px
      border-bottom 1px solid #aaa
      padding 5px 10px
      width 300px
    input[disabled="disabled"]
      border-bottom 1px dashed #aaa
      cursor crosshair
      color #ccc

.info-bar
  padding 10px 20px
  background #eee

.info-bar.success
  background #49b5b5
  color #fff

.info-bar.danger
  background #b54949
  color #fff
