*
  margin 0
  padding 0

ul
  padding 0
  margin 0
  list-style none

body
  color #7e7e7e
  background #f7f7f7
  font-size 14px

a
  color #333
  text-decoration none

.hide
  display none

.align-right
  text-align right

.pull-left
  float left

.pull-right
  float right

.center
  margin 0 auto
  text-align center

.container
  margin 0 auto
  width 1280px

.header
  width 100%
  height 80px
  background #424242

.header
  h1
    color #fff
    font-weight normal
    line-height 80px
    text-indent 3em
    float left
    margin 0

  .nav
    .current-user
      color #aaa

  .nav,
  .nav a
    color #fff
    line-height 80px
    padding 0 20px

.footer
  width 100%
  height 30px
  line-height 30px
  text-indent 1em

.main
  overflow hidden
  background #38c2a8
  .menu
    padding-top 20px
    width 150px

    ul.nav li
      a
        transition-duration 0.25s
        color #fff
        text-decoration none
        display block
        width 150px
        height 40px
        line-height 40px
        text-align center

      &:hover
        transition-duration 0.25s
        background #31a592

      &.current
        background #31a592

  .content
    min-height 50vh
    margin-left 150px
    padding 30px
    background #fff

    .title
      font-size 28px
      margin-bottom 20px
      border-bottom 1px solid #ddd
      padding-bottom 20px

.pagination
  margin-top 20px
  text-align center
  background #eee
  ul li
    display inline-block
    a
      padding 10px
      display inline-block
      &:hover
       background #aaa

.btn-group
  padding-left 60px
  padding-top 20px

.btn
  height 16px
  line-height 16px
  padding 3px 10px
  display inline-block
  text-align center
  color #fff
  border none
  background #999
  border-radius 4px
  box-shadow  0 3px 0 #777

.btn-lg
  padding 0
  width 160px
  height 40px
  line-height 40px
  font-size 16px

.btn-success
  background #38c2a8
  box-shadow 0 3px 0 #31a592

.btn-info
  background #3596D0
  box-shadow 0 3px 0 #1e6c9d

.btn-danger
  background #b54949
  box-shadow 0 3px 0 #9B1F1F

.table-container
  width 100%

  table
    width 100%

    thead
      background #e5e5e5
      th
        height 30px
        line-height 30px

    tbody
      tr
        border-bottom 1px solid #ddd
      td
        height 30px
        line-height 30px
        max-width 250px
        text-align center
        vertical-align top
        word-wrap break-word
        word-break break-all

.form-container
  section
    margin 20px
    label
      width 100px
      vertical-align top
      display inline-block
      text-align right
      padding-right 20px
    input
      display inline-block
      border 0px
      border-bottom 1px solid #aaa
      padding 5px 10px
      width 300px
    input[disabled="disabled"],
      border-bottom 1px dashed #aaa
      cursor crosshair
      color #ccc
    textarea
      padding 10px
      border 1px solid #ccc
      width 500px
      height 100px
    textarea[disabled="disabled"]
      border 1px dashed #ccc
    span.field-content
      width 500px
      display inline-block
      padding 0 10px 4px 10px
      border-bottom 1px dashed #ccc
    span.image-content
      display inline-block
      padding 10px
      border 1px dashed #ccc
      img
        border-radius 4px
    select[multiple=""]
      padding 4px
      width 400px

#receivers-box
  margin-top 10px
  min-height 20px
  span.receiver
    display inline-block
    padding 3px 5px
    margin 2px 6px
    border-radius 3px
    border 1px solid #aaa

    span.close-btn
      cursor pointer
      margin-left 10px

.info-bar
  padding 10px 20px
  background #eee

.info-bar.success
  background #49b5b5
  color #fff

.info-bar.danger
  background #b54949
  color #fff

.topbar
  margin 20px
