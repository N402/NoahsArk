.main
  width 80%
  margin 0 auto
  margin-top 20px

#account-goals.main
  .wrapper
    clear both
    display block
    overflow hidden

  .title
    height 18px
    font-size 36px
    border-bottom 1px solid #aaa
    margin-top 40px
    margin-bottom 40px
    span
      background #eee
      padding-right 30px

  .cards-container.normal-card
    overflow hidden
    background-position center center
    transition-duration 0.25s
    width 245px
    height 146px
    &:hover
      transform translate3d(0,-4px,0px)
      box-shadow 3px 3px 10px #aaa

    .card
      display block
      position relative
      transition-duration 0.25s
      background rgba(0,0,0,0.0)
      height 100%
      &:hover
        background rgba(0,0,0,0.5)
      &:hover .card-like
        opacity 1
      .card-title
        color #fff
        padding 15px
        font-size 18px
        text-overflow ellipsis
        text-shadow 0px 0px 3px #111
      .card-like
        transition-duration 0.25s
        opacity 0
        color #fff
        right 15px
        bottom 15px
        font-weight bold
        position absolute
        .iconfont
          color #ff0033

  .cards-container
    float left
    margin 20px
    border-radius 8px
    img
      width 250px
      height 150px
      border-radius 8px

  .cards-container.create-card
    width 246px
    height 146px
    border-radius 8px
    border 2px dashed #aaa;

    &:hover .card
      color #aaa

    .card
      display block
      cursor pointer
      color #ccc
      font-size 100px
      line-height 150px
      text-align center

#account-goal.main
  padding-top 40px
  .goal
    box-shadow 1px 1px 9px #ddd
    .banner-image
      background-color #666
      background-position center
      position relative
      background-repeat no-repeat
      margin 0
      width 350px
      height 170px
      .avatar
        background-size 100% 100%
        width 90px
        height 90px
        border-radius 90px
        border 3px solid rgba(255,255,255,0.7)
        display block
        position absolute
        bottom -25px
        left 130px
    .goal-info
      margin 0
      width 350px
      background #fff
      padding-bottom 20px
      .title
        padding 40px 30px 0 30px
        font-size 18px
        font-weight bold
      .state-like
        padding 10px 30px
        .state
          font-size 14px
          color #aaa
        .like
          color #aaa
          font-size 14px
          margin-left 40px
          .icon-xiai
            color #ff0000
            font-size 12px
      .goal-description
        font-size 14px
        padding 10px 30px
        color #333
    .btn-group
      padding-top 16px
      .btn
        margin 0 10px

  .activity-container
    width 760px
    margin-left 20px

    .create-activity
      box-shadow 1px 1px 9px #ddd
      background #fff
      padding 10px
      textarea
        width 100%
        resize none
        height 120px
        box-sizing border-box
        border 1px solid #ddd
        padding 10px
      .tool
        margin-top 10px
        overflow hidden
        a
          color #666
          padding 20px
        #preview
          width 80px

    .activities
      .activity
        box-shadow 1px 1px 9px #ddd
        font-size 16px
        margin-top 20px
        padding 16px
        background #fff

      .activity-image
        margin 10px 0
        img
          width 150px
          height 150px
      .activity-time
        color #999
        font-size 14px
        margin-top 10px

#mask
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 1
  background rgba(0,0,0,0.6)

#createGoal
  position fixed
  top 50%
  left 50%
  width 600px
  height 560px
  padding 20px
  margin-top -300px
  margin-left -300px
  background #fff
  z-index 500
  border-radius 6px
  overflow hidden

  h2
    color #888
    margin 0
    padding 0
    padding-bottom 10px
    border-bottom 1px solid #ccc

  h3
    color #999
    margin-top 24px
    margin-bottom 15px

  input, textarea
    margin-bottom 12px
  textarea[name="description"]
    height 6em

  .pics
    position relative
    margin-top 18px
    margin-bottom 18px
    height 110px
    .pic
      position absolute
      width 180px
      height 100px
      overflow hidden
      border none
      img
        border none
        width 100%
        height 100%

    .pic-selected:not(#createGoalChoosePicBtn)
      border 2px solid #0dadb7
      box-shadow 0px 0px 10px #999
      height 96px
      width 176px
      span
        top -10px
        left -10px
        color #fff
        text-align center
        line-height 46px
        font-size 24px
        position absolute
        background #0dadb7
        display block
        height 40px
        width 40px;
        border-radius 40px

    #createGoalChoosePicBtn.pic-selected
      border 2px solid #0dadb7
      transition-duration 0.25s
      opacity 0
      &:hover
        opacity 1
        background rgba(0,0,0,0.7)

    .pic-left
      left 0

    .pic-right
      right 0

    .pic-middle
      left 50%
      margin-left -90px

  .btn-group
    a#createCancelBtn
      color #999
      font-size 14px
      padding 40px
      font-weight bold

  #createGoalChoosePicBtn
    border 2px solid #ddd
    height 96px
    width 176px
    cursor pointer
    color #ccc
    text-align center
    p
      margin 0
      font-size 60px
      padding-top 30px
      padding-bottom 10px
      line-height 20px
    span
      letter-spacing 8px
