#message-container
  width 900px 
  margin 60px auto
  padding 20px
  background #fff
  border 1px solid #ccc
  border-radius 6px
  box-shadow 0 0 6px #ccc
  overflow hidden
  p
    margin 0
    padding 0
  h2
    margin 0
    padding 0
    text-indent 1em
    border-bottom 1px solid #ccc
    padding-bottom 20px
  .avatar
    display inline-block
    img
      width 90px
      height 90px
      border-radius 90px
  .content
    width 780px
    word-break break-all
    vertical-align top
    display inline-block
    margin-left 20px
    .time
      font-size 12px
      color #bbb
  li
    padding 18px 0
    border-bottom 1px solid #aaa
  .pagination
    margin-top 20px
    text-align center
    span.pages
      margin 0 20px
    a
      background #666
      padding 10px 20px
      font-size 14px
      color #fff
